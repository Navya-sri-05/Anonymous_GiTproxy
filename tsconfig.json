{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es6"],
    "target": "es6",
    "module": "CommonJS",
    "outDir": "build",
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": false,
    "incremental": true
  },
  "include": ["src/**/*.ts", "index.ts", "src/cli/index.ts"],
  "exclude": ["node_modules", ".vscode"]
}
